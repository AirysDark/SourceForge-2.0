// Minimal text plymouth theme
message_sprite = Sprite();
fun draw_message() {
  my_message = "SourceForge 2.0 OS";
  message_sprite.SetX(10);
  message_sprite.SetY(10);
  message_sprite.SetZ(10);
  message_sprite.SetVisible(true);
  message_sprite.SetText(my_message);
}
fun splash_start () {
  Plymouth.SetBackgroundColor (0.0, 0.0, 0.0);
  draw_message();
}
fun splash_end () { }
